<% include ../../partials/boilerplate %>
<div class="flex-container">
<h1 class="hiss spotlight-name spotlight-item issue-color"><%=cat.name%></h1>
<div class="spotlight-header" style="background-image: url('<%=cat.img_url%>')">
</div>
<div class="flex-item">
<p>Issue of Impurrrtance to <%= cat.name%>: <%= cat.issue%></p>
<p><%= cat.blurb%></p>
<p><%= cat.hashtags%></p>
  <br>
   <form action="/cats/<%=cat.id%>/edit" class='put' method="GET">
  <input type="submit" class="editlink" value="Edit">
  </form>
  <br>
  <form action="/cats/<%=cat.id%>?_method=Delete" class='delete' method="POST">
  <input type="submit" class="deletelink" value="Delete">
  </form>
  </div>
</div>

<script src='../../public/js/script.js'></script>
<% include ../../partials/end %>
